# Uncomment the next line to define a global platform for your project
platform :ios, '10.0'

target 'CleanArchitectureTest' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for CleanArchitectureTest
  pod 'SwiftLint'

end

target 'Domain' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Domain
  pod 'SwiftLint'

  target 'DomainTests' do
    inherit! :search_paths

    # Pods for testing
    pod 'SwiftLint'
  end

end

target 'NetworkPlatform' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  pod 'SwiftLint'
  pod 'Alamofire'

end

target 'RealmPlatform' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for RealmPlatform
  pod 'SwiftLint'
  pod 'RealmSwift'

end
